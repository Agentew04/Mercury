<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SAAE.Editor.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        <StyleInclude Source="Controls/ChapterControl.axaml"></StyleInclude>
        <StyleInclude Source="Assets/Styles/GuideStyles.axaml"></StyleInclude>
    </Application.Styles>
  <Application.Resources>
      <ResourceDictionary>
          <ResourceDictionary.MergedDictionaries>
              <ResourceInclude Source="Controls/GuideMenu.axaml"/>
          </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
      
      <SolidColorBrush x:Key="BackgroundGrey">#1F1F1F</SolidColorBrush>
      <SolidColorBrush x:Key="AlternateGrey" Color="#383838" />
      <SolidColorBrush x:Key="BlueLight">#0b779c</SolidColorBrush>
      <SolidColorBrush x:Key="PrimaryForeground">#dddddd</SolidColorBrush>
      <SolidColorBrush x:Key="Purple1" Color="#7950F2" />
  </Application.Resources>
</Application>