<?xml version="1.0" encoding="UTF-8"?>
<SyntaxDefinition name="MIPS" extensions=".asm" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
    <Color name="Comment" foreground="#6A9955" /> <!-- ok -->
    <Color name="Register" foreground="#9CDCFE" /> <!-- ok -->
    <Color name="Directive" foreground="#C586C0" /><!-- ok -->
    <Color name="Label" foreground="#DCDCAA" /> <!-- ok -->
    <Color name="Instruction" foreground="#5C9CD6" /> <!-- ok -->
    <Color name="Number" foreground="#B5CEA8" /> <!-- ok -->
    <Color name="String" foreground="#CE9178" /> <!-- ok -->
    <Color name="Default" foreground="#FFFFFF" /> <!-- ok -->
    <Color name="Comma" foreground="#5C9CD6" /> <!-- ok -->
    <Color name="StringEscape" foreground="#D7BA7D"/>

    <RuleSet ignoreCase="true">

        <!-- Comments: # até o fim da linha -->
        <Span begin="#" end="\n" color="Comment" />

        <!-- Strings entre aspas -->
        <Span color="String">
            <Begin>"</Begin>
            <End>"</End>
            <RuleSet>
                <Span begin="\\" end="." color="StringEscape"/>
            </RuleSet>
        </Span>

        <!-- Labels: começo de linha + nome + dois pontos -->
        <Rule color="Label">
            ^\s*[a-zA-Z_\.][a-zA-Z0-9_]*\s*:
        </Rule>

        <!-- Registers: $t0, $s1, $a0 etc -->
        <Rule color="Register">
            \$(zero|at|v[0-1]|a[0-3]|t[0-9]|s[0-7]|k[0-1]|gp|sp|fp|ra|[1-9]|1[0-9]|2[0-9]|3[0-1]|0)
        </Rule>

        <!-- Directives: .data, .text, .word, etc -->
        <Rule color="Directive">
            \.(data|text|word|byte|asciiz|ascii|globl|align|space|float|double|macro|endmacro)
        </Rule>

        <!-- Numbers: decimais ou hexadecimais -->
        <Rule color="Number">
            \b0x[0-9a-fA-F]+\b|\b\d+\b
        </Rule>

        <Rule color="Comma">
            ,
        </Rule>

        <!-- label no meio de uma instrucao -->
        

        <!-- Instructions: keywords (preencher abaixo) -->
        <Keywords color="Instruction">
            <Word>add</Word>
            <Word>addi</Word>
            <Word>addiu</Word>
            <Word>addu</Word>
            <Word>div</Word>
            <Word>divu</Word>
            <Word>madd</Word>
            <Word>maddu</Word>
            <Word>mfhi</Word>
            <Word>mflo</Word>
            <Word>movn</Word>
            <Word>movz</Word>
            <Word>msub</Word>
            <Word>msubu</Word>
            <Word>mthi</Word>
            <Word>mtlo</Word>
            <Word>mul</Word>
            <Word>mult</Word>
            <Word>multu</Word>
            <Word>slt</Word>
            <Word>slti</Word>
            <Word>sltiu</Word>
            <Word>sub</Word>
            <Word>subu</Word>
            <Word>beq</Word>
            <Word>bgez</Word>
            <Word>bgezal</Word>
            <Word>bgtz</Word>
            <Word>blez</Word>
            <Word>bltz</Word>
            <Word>bltzal</Word>
            <Word>bne</Word>
            <Word>j</Word>
            <Word>jal</Word>
            <Word>jalr</Word>
            <Word>jr</Word>
            <Word>and</Word>
            <Word>andi</Word>
            <Word>clo</Word>
            <Word>clz</Word>
            <Word>nor</Word>
            <Word>or</Word>
            <Word>ori</Word>
            <Word>xor</Word>
            <Word>xori</Word>
            <Word>lb</Word>
            <Word>lbu</Word>
            <Word>lh</Word>
            <Word>lhu</Word>
            <Word>lui</Word>
            <Word>lw</Word>
            <Word>sb</Word>
            <Word>sh</Word>
            <Word>sw</Word>
            <Word>rotr</Word>
            <Word>rotrv</Word>
            <Word>sll</Word>
            <Word>sllv</Word>
            <Word>sra</Word>
            <Word>srav</Word>
            <Word>srl</Word>
            <Word>srlv</Word>
            <Word>break</Word>
            <Word>syscall</Word>
            <Word>teq</Word>
            <Word>teqi</Word>
            <Word>nop</Word>
            <Word>li</Word>
            <Word>la</Word>
            <Word>move</Word>
        </Keywords>

        <Rule color="Label">
            [a-zA-Z_\.][a-zA-Z0-9_]*
        </Rule>
    </RuleSet>
</SyntaxDefinition>