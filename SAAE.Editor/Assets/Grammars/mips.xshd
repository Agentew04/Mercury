<?xml version="1.0" encoding="UTF-8"?>
<SyntaxDefinition name="MIPS" extensions=".asm" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
    <Color name="Comment" foreground="#6A9955" />
    <Color name="Register" foreground="#9CDCFE" />
    <Color name="Directive" foreground="#C586C0" />
    <Color name="Label" foreground="#DCDCAA" />
    <Color name="Instruction" foreground="#5C9CD6" />
    <Color name="Number" foreground="#B5CEA8" />
    <Color name="String" foreground="#CE9178" />
    <Color name="Default" foreground="#FFFFFF" />
    <Color name="Comma" foreground="#5C9CD6" />
    <Color name="StringEscape" foreground="#D7BA7D"/>
    <Color name="MacroParameter" foreground="#4EC9B0"/>
    

    <RuleSet ignoreCase="true">


        <!-- Comments: # até o fim da linha -->
        <Span begin="#" end="\n" color="Comment" />
        
        <!-- Strings entre aspas -->
        <Span color="String">
            <Begin>"</Begin>
            <End>"</End>
            <RuleSet>
                <Span begin="\\" end="." color="StringEscape"/>
            </RuleSet>
        </Span>

        <!-- Labels: começo de linha + nome + dois pontos -->
        <Rule color="Label">
            ^\s*[a-zA-Z_\.][a-zA-Z0-9_]*\s*:
        </Rule>

        <!-- Registers: $t0, $s1, $a0 etc -->
        <Rule color="Register">
            \$(zero|at|v[0-1]|a[0-3]|t[0-9]|s[0-7]|k[0-1]|gp|sp|fp|ra|[1-9]|1[0-9]|2[0-9]|3[0-1]|0|f[0-9]{1,2})
        </Rule>

        <!-- Directives: .data, .text, .word, etc -->
        <Rule color="Directive">
            \.(data|text|word|byte|asciiz|ascii|globl|align|space|float|double|endmacro|macro)
        </Rule>
        
        <!-- macros -->
        <Rule color="Label">
            (?&lt;=\.macro)\s*[a-zA-Z_][a-zA-Z0-9_]*
        </Rule>
        <Rule color="MacroParameter">
            (?&lt;=^\s*\.macro\s+[A-Za-z_][A-Za-z0-9_]*\s+)[^,\s][^,]*(?:\s*,\s*[^,\s][^,]*)*
        </Rule>
        <Rule color="MacroParameter">
            \\[a-zA-Z_][a-zA-Z0-9_]*
        </Rule>

        <!-- Numbers: decimais ou hexadecimais -->
        <Rule color="Number">
            \b0x[0-9a-fA-F]+\b|\b\d+\b
        </Rule>
        <Rule color="Number">
            -\b0x[0-9a-fA-F]+\b|-\b\d+\b
        </Rule>
        <Rule color="Number">
            \b\d+\.\d+\b
        </Rule>

        <Rule color="Comma">
            ,
        </Rule>

        <!-- label no meio de uma instrucao -->
        
