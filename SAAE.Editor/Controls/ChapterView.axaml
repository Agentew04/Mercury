<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:SAAE.Editor.Controls"
             xmlns:localization="clr-namespace:SAAE.Editor.Localization"
             xmlns:converters="clr-namespace:SAAE.Editor.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="controls:ChapterView"
             x:Class="SAAE.Editor.Controls.ChapterView">
    <Grid RowDefinitions="Auto,*">
        <Button Content="{Binding Source={x:Static localization:GuideResources.Instance}, Path=GoBackText}" 
            Command="{Binding CurrentChapter.GoBackCommand, RelativeSource={RelativeSource AncestorType=controls:ChapterView}}"
            HorizontalAlignment="Left" Margin="5"/>
        <ContentControl Grid.Row="1"
            Content="{Binding CurrentChapter, RelativeSource={RelativeSource AncestorType=controls:ChapterView}}">
            <ContentControl.ContentTemplate>
                <converters:GuideChapterDataTemplate/>
            </ContentControl.ContentTemplate>
        </ContentControl>
    </Grid>
</UserControl>
