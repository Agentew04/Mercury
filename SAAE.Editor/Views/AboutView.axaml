<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:SAAE.Editor.Localization"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="300"
        x:Class="SAAE.Editor.Views.AboutView"
        Width="450"
        Height="300"
        Title="{loc:AboutResources WindowTitle}">
    <ScrollViewer>
        <StackPanel Margin="15" HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Left">
                <Run Text="{loc:AboutResources Author}"></Run>
                <Run Text="Rodrigo Appelt"></Run>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left">
                <Run Text="{loc:AboutResources Version}"></Run>
                <Run Text="1.0.0"></Run>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</Window>
