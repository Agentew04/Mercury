<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Mercury.Editor.Controls"
             xmlns:loc="clr-namespace:Mercury.Editor.Localization"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             IsHitTestVisible="{Binding IsVisible, RelativeSource={RelativeSource Self}}"
             x:Class="Mercury.Editor.Controls.BoolPopup"
             x:DataType="controls:BoolPopup">
    <Border Background="#80000000" 
            KeyDown="InputElement_OnKeyDown"
            x:Name="DismissBorder"
            PointerPressed="Dismiss_OnPointerPressed">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="{StaticResource AlternateGrey}"
                Padding="15,10"
                CornerRadius="3">
            <Grid RowDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0" x:Name="PopupTitle"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,5"
                           Classes="minorheader"></TextBlock>
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Margin="0"
                            Spacing="5">
                    <Button Classes="primary cancel"
                            Content="{Binding Path=CancelPopupText, Source={x:Static loc:FileEditorResources.Instance}}"
                            Padding="7,3"
                            Margin="0"
                            FontSize="14"
                            Command="{Binding DenyCommand}"/>
                    <Button Classes="primary"
                            Content="{Binding Path=ConfirmPopupText, Source={x:Static loc:FileEditorResources.Instance}}"
                            Padding="7,3"
                            Margin="0"
                            FontSize="14"
                            Command="{Binding ConfirmCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</UserControl>